  "GET /api/articles/:article_id": {
    "description": "serves an object of the specified article with key information",
    "queries": [
      "author",
      "topic",
      "sort_by",
      "order"
    ],
    "exampleResponse": {
      "article_id": 12,
      "title": "Moustache",
